                                    </AnchorPane>
                                    <Button fx:id="chercherButton" disable="true" mnemonicParsing="false" onAction="#handleChercherButton" prefHeight="32.0" prefWidth="244.0" styleClass="searchButton" stylesheets="@../windowsSwitcher.css">
